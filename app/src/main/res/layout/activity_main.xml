<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffffff"
    android:id="@+id/LogIn"
    android:clickable="true">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="textPersonName"
        android:hint="@string/user"
        android:ems="12"
        android:id="@+id/login"
        android:paddingLeft="10dp"
        android:background="@color/StartPageTextFields"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="textPassword"
        android:ems="12"
        android:hint="@string/password"
        android:id="@+id/pwd"
        android:editable="false"
        android:paddingLeft="10dp"
        android:background="@color/StartPageTextFields"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Login"
        android:id="@+id/loginbtn"
        android:onClick="LogIn"
        android:background="@color/buttons_color"
        android:textColor="@color/white"
        android:elegantTextHeight="false"
        android:clickable="true"
        android:fontFamily="Arial"
        android:layout_below="@+id/pwd"
        android:layout_marginTop="40px"
        android:layout_alignLeft="@+id/pwd"
        android:layout_alignStart="@+id/pwd"
        android:layout_alignRight="@+id/pwd"
        android:layout_alignEnd="@+id/pwd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test restprovider"
        android:id="@+id/button"
        android:onClick="testRestProvider"
        android:layout_marginBottom="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/loginbtn"
        android:layout_alignEnd="@+id/loginbtn"
        android:layout_alignLeft="@+id/loginbtn"
        android:layout_alignStart="@+id/loginbtn" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сервис для учета и планирования корпоративных и семейных финансов"
        android:id="@+id/textView"
        android:textSize="16dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="@color/background_material_dark"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@mipmap/logo"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
