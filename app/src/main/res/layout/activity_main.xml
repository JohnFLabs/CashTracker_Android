<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/LogIn"
    android:background="@color/StartPageBackground">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="textPersonName"
        android:hint="@string/user"
        android:ems="12"
        android:id="@+id/login"
        android:paddingLeft="10dp"
        android:background="@color/StartPageTextFields"
        android:layout_marginTop="114dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="textPassword"
        android:ems="12"
        android:hint="@string/password"
        android:id="@+id/pwd"
        android:editable="false"
        android:paddingLeft="10dp"
        android:background="@color/StartPageTextFields"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/login"
        android:layout_alignLeft="@+id/login"
        android:layout_alignStart="@+id/login" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Login"
        android:id="@+id/loginbtn"
        android:onClick="LogIn"
        android:background="@color/StartPageButtonColor"
        android:textColor="@color/white"
        android:elegantTextHeight="false"
        android:clickable="true"
        android:fontFamily="Arial"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/pwd"
        android:layout_alignLeft="@+id/pwd"
        android:layout_alignStart="@+id/pwd"
        android:layout_alignRight="@+id/pwd"
        android:layout_alignEnd="@+id/pwd" />
</RelativeLayout>
